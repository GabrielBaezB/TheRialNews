<div class="login-section">
  <div class="form-box login">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <h2>Registrarse</h2>
      <div class="form-grid">
        <div class="input-box">
          <div class="field">
            <%= f.label :"Nombre", class: "text-white" %> <br>
            <%= f.text_field :name, autocomplete: "new-name" %>
          </div>
        </div>
        <div class="input-box">
          <div class="field">
            <%= f.label :"Telefono", class: "text-white" %> <br>
            <%= f.text_field :phone, autocomplete: "new-phone" %>
        </div>
      </div>
      <div class="input-box">
        <div class="field">
          <%= f.label :"Edad", class: "text-white" %> <br>
          <%= f.text_field :age, autocomplete: "new-age" %>
        </div>
      </div>
      <div class="input-box">
        <div class="field">
          <%= f.label :email, class: "text-white" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
      </div>
      <div class="input-box">
        <div class="field">
          <%= f.label :password, class: "text-white" %>
          <% if @minimum_password_length %>
          <em class="text-white">(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>
      </div>
      <div class="input-box">
        <div class="field">
          <%= f.label :password_confirmation, class: "text-white" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
      </div>
    </div>
    <div class="actions">
      <div class="centered-button">
      <%= f.submit "Registrar", class: "btn btn-primary" %>
      </div>
    </div>
  </div>
  
  <% end %>
</div>
  