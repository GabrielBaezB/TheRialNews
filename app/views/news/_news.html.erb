<div class="container ml-5">
  <div class="card" id="<%= dom_id news %>">
    <div class="card-hearder d-flex align-items-center">
      <h5 class="ml-2 align-middle mx-5">
        <%= news.user.name %>
      </h5>
    </div>
    <span class="ml-2 align-middle">
      <%= news.title %>
    </span>
    <div class="card-body">
      <%= news.content %>
    </div>
    <div class="card-footer d-flex justify-content-center">
      <i class="far fa-comment float-right mx-5">1</i>
      <i class="fa fa-retweet float-right mx-5">2</i>
      <i class="far fa-heart float-right mx-5">90</i>
      <i class="fa fa-bar-chart float-right mx-5">5.320</i>
      <i class="fas fa-upload float-right mx-5"></i>
    </div>
  </div>